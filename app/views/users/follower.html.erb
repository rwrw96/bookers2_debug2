<h1>Follower Users</h1>
<% if @users.exists? %>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @users.each do |user| %>
          <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <td><%= user.name %></td>
          <td><span>フォロー数:</span><%= @user.followeds.count %></td>
          <td><span>フォロワー数:</span><%= user.count %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
        <% end %>
<% else %>
  <p>ユーザーはいません</p>
      </tr>
    </tbody>
  </table>
<% end %>