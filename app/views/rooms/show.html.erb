<div class="container">
  <div class="row">
    <div class="col-6">
      <% @chat_user.each do |chat_user| %>
        <% if chat_user.user.id != current_user.id %>
          <h1><%= chat_user.user.name %>さんとのチャット</h1>
        <% end %>
      <% end %>
      <div class="chat table">
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
            <div style="text-align: left"><%= chat.content %></div>
          <% else %>
            <div style="text-align: right"><%= chat.content %></div>
          <% end %>
        <% end %>
      </div>

      <%= form_for @chat, remote: true do |f| %>
        <%= f.text_field :content %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <% f.submit %>
      <% end %>
    </div>
  </div>
</div>